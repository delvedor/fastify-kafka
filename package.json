{
  "name": "@fastify/kafka",
  "version": "1.0.0",
  "description": "Fastify plugin to interact with Apache Kafka.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "infra:start": "docker-compose up -d",
    "infra:stop": "docker-compose stop",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "test": "npm run lint && tap \"test/*.js\" && npm run test:typescript",
    "test:typescript": "tsd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fastify/fastify-kafka"
  },
  "keywords": [
    "fastify",
    "kafka",
    "events",
    "sourcing"
  ],
  "author": "Tomas Della Vedova - @delvedor (http://delved.org)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fastify/fastify-kafka/issues"
  },
  "homepage": "https://github.com/fastify/fastify-kafka#readme",
  "dependencies": {
    "fastify-plugin": "^4.1.0",
    "node-rdkafka": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "abstract-logging": "2.0.1",
    "fastify": "^3.25.3",
    "standard": "^17.0.0",
    "tap": "^16.0.0",
    "tsd": "^0.22.0",
    "typescript": "^4.5.4"
  },
  "tsd": {
    "directory": "test"
  },
  "publishConfig": {
    "access": "public"
  }
}
